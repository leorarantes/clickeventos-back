generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  events      Events[]
  createdAt   DateTime  @default(now())

  @@map("users")
}

model Events {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  date        String
  description String
  manager     Users    @relation(fields: [managerId], references: [id])
  managerId   Int
  createdAt   DateTime @default(now())

  @@map("events")
}